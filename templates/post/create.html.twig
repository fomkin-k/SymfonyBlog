{% extends 'base.html.twig' %}

{% block title %}Создание поста{% endblock %}

{% block body %}
    <h3>Создайте новый пост</h3>
    {{ form_start(form) }}

        {{ form_row(form.title, {
            label: 'Заголовок'
        }) }}
        {{ form_row(form.topic, {
            label: 'Тема'
        }) }}
        {{ form_row(form.summary, {
            label: 'Краткое содержание'
        }) }}
        {{ form_row(form.content, {
            label: 'Текст поста'
        }) }}

        {# <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> Сохранить
        </button> #}

    {{ form_end(form) }}
{% endblock %}